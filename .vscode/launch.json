    "version": "0.2.0",
    "configurations": [
        {
            "name": "ArgoCD",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["argocd", "./testdata/argocd/", "--repoServer=localhost:8081", "--output-dir=out/"]
        },
        {
            "name": "Kustomize build",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["kustomize", "build", "./testdata/kustomize/source", "--output-dir=out/"]
        },  
        {
            "name": "Kustomize diff",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "main.go",
            "args": ["diff", "./testdata/kustomize/source", "./testdata/kustomize/target"]
        },
        {
            "name": "Run tests",
            "type": "go",
            "request": "launch",
            "mode": "test",
            "program": "${relativeFileDirname}",
        }
    ]
}